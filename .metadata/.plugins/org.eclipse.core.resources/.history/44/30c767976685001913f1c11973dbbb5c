package br.com.edson.main;

import java.util.Arrays;

import org.springframework.context.support.ClassPathXmlApplicationContext;

import br.com.edson.model.Produto;
import br.com.edson.service.ProdutoService;

public class SpringDataTeste {

	public static void main(String[] args) {

		ClassPathXmlApplicationContext ctx = 
		new ClassPathXmlApplicationContext("resources/spring.xml");
		
		ProdutoService produtoService = ctx.getBean(ProdutoService.class);
		
		produtoService.add(new Produto(1, "Laranra"));
		produtoService.add(new Produto(2, "Banana"));
		
		System.out.println(produtoService.findAll());
		
		produtoService.add(Arrays.asList(
				new Produto(3, "Goiaba"), 
				new Produto(4, "Melancia"),
				new Produto(5, "pera")
				));
		
		
	}

}
